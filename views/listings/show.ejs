<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
    </div>
    <div class="col-6 offset-3">
    <div class="card listing-card">
        <div class="card" style="width: 35rem;">
            <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing-img">
            <div class="card-body">
             <p class="card-text">  
                                    <%= listing.description %><br>
                                    &#8377 <%= listing.price.toLocaleString("en-IN") %><br>
                                    <%= listing.location %><br>
                                    <%= listing.country %> 
            </p>
            </div>
        </div>
    </div>
</div>
   
        <br>
        <div class="btns">
            <form method="POST" action="/listings/<%= listing._id %>/edit">
                <button class="btn btn-dark add-btn offset-3">Edit</button>
            </form>

            <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                <button class="btn b tn-dark Delete offset-5">Delete</button>
            </form>
        </div>
       
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Write a review</h4>
            <form method="POST" action="/listings/<%=listing.id%>/reviews"  novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="rating" class="form-range" >
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label" >Comments</label>
                    <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please submit some comments for review</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>

            <p><b>All Reviews</b></p>
           <div class="row">
            <% for(review of listing.reviews){%>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Tushar</h5>
                        <p class="card-text"><%= review.Comment%></p>
                        <p class="card-text"><%= review.rating%> stars</p>
                    </div>
                    <form method="POST" action="/listings/<%= listing._id%>/reviews/<%=review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    
                </div>
                <% }%> 
            </div> 
        </div>
        
       



   



</div>




